extends layout

block body
  div.pull-right(style='position: absolute; right: 2em; top: 0.5em')
    ul.sharing-online-group
      li(style='width: 4em;')
      li.sharing
  div(style='height: 2.5em;')
  if (embed_url)
    iframe#etherpad(src=embed_url, style='border: none;', height="100%", width="100%")
  else
    div.text
      != text
